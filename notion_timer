<!DOCTYPE html>
<html>
  <body>
    <h1 id="timer">00:00</h1>
    <script>
      let sec = 0;
      setInterval(() => {
        sec++;
        let min = Math.floor(sec / 60);
        let s = sec % 60;
        document.getElementById("timer").textContent = 
          `${min.toString().padStart(2, '0')}:${s.toString().padStart(2, '0')}`;
      }, 1000);
    </script>
  </body>
</html>
